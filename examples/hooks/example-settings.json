{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Shell",
        "hooks": [
          {
            "type": "command",
            "command": "./examples/hooks/log-commands.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Tool ${tool_name} is about to execute\" | jq -R '{message: .}'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Shell",
        "hooks": [
          {
            "type": "command",
            "command": "./examples/hooks/log-commands.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Edit|WriteFile",
        "hooks": [
          {
            "type": "command",
            "command": "./examples/hooks/enforce-formatting.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}